<div class="panel panel-info col-lg-7">
  <div class="panel-heading">
    <h3 class="panel-title"><%='Timetable'%></h3>
  </div>


  <% @list.each do |timetable| %>

    <p>
      <strong>Day:</strong>
      <% var= '';
         case timetable.day
           when 0
             var = 'Monday';
           when 1
             var = 'Tuesday';
           when 2
             var = 'Wednesday';
           when 3
             var = 'Thursday';
           when 4
             var = 'Friday';
         end
      %>
      <%= var %>
      <strong>Hour: </strong>
      <%= timetable.hour %>
      <strong>Room: </strong>
      <%= timetable.room %>
    </p>
<% end %>


  <%= table_for(@list, :html => {:class => 'center'})  do |t| %>
      <%= t.head do %>
          <%= t.r do %>
              <th class="titre">
                Day
              </th>
              <% (8..18).each do |i| %>
                  <%= t.h(i) %>
              <% end %>
          <% end %>
      <% end %>

      <%= t.body do |timetable| %>
          <%= t.r do %>
              <% var= '';
                 case timetable.day
                   when 0
                     var = 'Monday';
                   when 1
                     var = 'Tuesday';
                   when 2
                     var = 'Wednesday';
                   when 3
                     var = 'Thursday';
                   when 4
                     var = 'Friday';
                 end
              %>
              <%= t.d(h(var)) %>

              <% (8..18).each do |i| %>
                  <% if i != timetable.hour %>
                      <%= t.d('') %>
                  <% else %>
                      <td class="cour">
                        Room: <%= timetable.room %>
                      </td>
                  <% end %>
              <% end %>
          <% end %>
      <% end %>
  <% end %>

