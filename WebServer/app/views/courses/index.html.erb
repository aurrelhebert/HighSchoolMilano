    <h1>All courses</h1>

<table class="table col-lg-5 col-lg-offset-3">
  <thead>
  <tr>
    <th>Title</th>
    <th>Desc</th>
  </tr>
  </thead>

  <tbody>
  <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.title, course %></td>
        <td><%= course.desc %>
          <%= link_to 'Edit', edit_course_path(course) %>
          <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
